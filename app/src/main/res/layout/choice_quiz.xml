<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="viewhelpers.ChoiceQuizLayout"
    tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout"
    android:padding="@dimen/default_padding" >

    <TextView
        android:id="@+id/part1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:singleSelection="true"
        android:textSize="@dimen/medium_font_size"
        android:text="Der Hund steht neben" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/options"
        app:layout_constraintTop_toBottomOf="@id/part1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.google.android.material.chip.Chip
            android:id="@+id/option1"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="das" />

        <com.google.android.material.chip.Chip
            android:id="@+id/option2"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="die" />

        <com.google.android.material.chip.Chip
            android:id="@+id/option3"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="der" />

    </com.google.android.material.chip.ChipGroup>

    <TextView
        android:id="@+id/part2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/options"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center_horizontal"
        android:textSize="@dimen/medium_font_size"
        android:text="Katze" />

    <TextView
        android:id="@+id/attribution"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/part2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center_horizontal"/>


    <ImageView
        android:id="@+id/tickmark"
        android:alpha="0"
        app:tint="@color/colorAnswerCorrect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="@dimen/default_padding"
        android:src="@drawable/ic_baseline_check_24"
        android:contentDescription="@string/correct" />

    <ImageView
        android:id="@+id/incorrectmark"
        android:alpha="0"
        app:tint="@color/colorAnswerCorrect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="@dimen/default_padding"
        android:src="@drawable/ic_baseline_close_24"
        android:contentDescription="@string/incorrect" />

</merge>